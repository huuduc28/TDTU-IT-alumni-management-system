﻿@using PagedList;
@model IPagedList<TDTU_IT_alumni_management_system.Models.Enterprise>
@{
    ViewBag.Title = "Quản lý doanh nghiệp";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<!-- Modal hiển thị thông báo lỗi -->
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="errorModalLabel">Lỗi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Hiển thị thông báo lỗi -->
                <p>@TempData["ErrorMessage"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa <span id="delete-news-title"></span> không?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "Enterprises", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id", null, new { id = "newsId" })
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <h2>Quản lý Doanh nghiệp</h2>
        <p>
            <a href="doanh-nghiep/tao-moi" class="btn btn-primary">
                Thêm
                <span class="lnr lnr-file-add"></span>
            </a>
        </p>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Logo</th>
                        <th>Tên doanh nghiệp </th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th> Email</th>
                        <th>Hiển thị</th>
                        <th>Ngày thêm</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ var Number = 1;}

                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                @Html.Raw(Number++)
                            </td>
                            <td>
                                <img src="~/Upload/images/Logo/@item.ImgLogo" style="width: 100px; height: 90px; object-fit : cover" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnterpriseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnterpriseAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.datebegin)
                            </td>
                            <td>
                                <span class="lnr lnr-eye" style="color: @((bool)item.hide ? "green" : "red"); font-size: 20px; font-weight: bold;"></span>
                            </td>
                            <td>
                                <a href="/quan-ly/doanh-nghiep/chinh-sua?id=@item.IDEnterprise" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                                <a href="/quan-ly/doanh-nghiep/chi-tiet?id=@item.IDEnterprise" class="btn btn-info">
                                    <span class="lnr lnr-eye"></span>
                                </a>
                                <a href="#" class="btn btn-danger delete-btn" data-id="@item.IDEnterprise">
                                    <span class="lnr lnr-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.PageCount > 1)
        {
            <div class="pagination-container">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <span class="page-link">Page @Model.PageNumber.ToString() of @Model.PageCount.ToString()</span>
                    </li>
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/quan-ly/doanh-nghiep?page=1" aria-label="First">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">First</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/quan-ly/doanh-nghiep?page=@(Model.PageNumber - 1)" aria-label="Previous">
                                <span aria-hidden="true">&lsaquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    }

                    @for (var i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                            <a class="page-link" href="/quan-ly/doanh-nghiep?page=@i">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.PageCount)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/quan-ly/doanh-nghiep?page=@( Model.PageNumber + 1 )" aria-label="Next">
                                <span aria-hidden="true">&rsaquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/quan-ly/doanh-nghiep?page=@Model.PageCount" aria-label="Last">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Last</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>

<script>
    window.onload = active();
    function active() {
        if (document.getElementById("nav-enterprise").className == "") {
            document.getElementById("nav-enterprise").className = "active";
        }
    }
    $(document).ready(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var newsId = $(this).data('id');
            var newsTitle = $(this).closest('tr').find('td:eq(1)').text();
            $('#newsId').val(newsId);
            $('#delete-news-title').text(newsTitle); // Đặt giá trị cho span có id "delete-news-title"
            $('#confirmDeleteModal').modal('show');
        });

        // Tự động chạy hàm active khi trang được tải
    });
      $(document).ready(function () {
      @if (TempData["ErrorMessage"] != null)
      {
          @:$('#errorModal').modal('show');
      }
  });
</script>