@model TDTU_IT_alumni_management_system.Models.Enterprise

@{
    ViewBag.Title = "Thêm doanh nghiệp";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
    
<div class="panel panel-default">
    <div class="panel-body">
        <h2>Thêm doanh nghiệp</h2>
        <h4>Enterprise</h4>
        <hr />
        @using (Html.BeginForm("Create", "Enterprises", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Tên doanh nghiệp", htmlAttributes: new { @class = "col-md-offset-1 col-md-10" })
                    <div class="col-md-offset-1 col-md-10">
                        @Html.EditorFor(model => model.EnterpriseName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên doanh nghiệp" } })
                        @Html.ValidationMessageFor(model => model.EnterpriseName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Địa chỉ", htmlAttributes: new { @class = "col-md-offset-1 col-md-10" })
                    <div class="col-md-offset-1 col-md-10">
                        @Html.EditorFor(model => model.EnterpriseAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ công ty" } })
                        @Html.ValidationMessageFor(model => model.EnterpriseAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-md-offset-1 col-md-10" })
                    <div class="col-md-offset-1 col-md-10">
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại (10 số)", type = "tel", pattern = "[0-9]{10}" })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-offset-1 col-md-10" })
                    <div class="col-md-offset-1 col-md-10">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Nhập địa chỉ email", type = "email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Website, htmlAttributes: new { @class = "col-md-offset-1 col-md-10" })
                    <div class="col-md-offset-1 col-md-10">
                        @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ website công ty" } })
                        @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Hình ảnh", htmlAttributes: new { @class = "col-md-offset-1 col-md-10" })
                    <div class="col-md-offset-1 col-md-10">
                        <input type="file" name="img" id="img" accept=".jpg,.png,.gif,.jpeg,.bmp" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Đường dẫn", htmlAttributes: new { @class = "col-md-offset-1 col-md-10" })
                    <div class="col-md-offset-1 col-md-10">
                        @Html.EditorFor(model => model.meta, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập đường dẫn" } })
                        @Html.ValidationMessageFor(model => model.meta, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Trạng thái", htmlAttributes: new { @class = "col-md-offset-1 col-md-2" })
                    <div class="col-md-1">
                        <div class="checkbox">
                            @{
                                bool hide = true;
                            }
                            @Html.CheckBoxFor(model => hide, new { style = "margin: -1px 5px" })
                            @Html.ValidationMessageFor(model => model.hide, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-primary" />
                        <div class="btn btn-secondary">
                            <a href="/quan-ly/doanh-nghiep">
                                Trở về
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function removeDiacritics(str) {
        return str.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
    }

    $("#EnterpriseName").keyup(function () {
        var text = $(this).val().toLowerCase();
        var textWithoutDiacritics = removeDiacritics(text);
        var text_create = textWithoutDiacritics.replace(/\s+/g, '-').replace(/[-]+/g, '-').replace(/[^a-z0-9\-]/g, '');
        $('#meta').val(text_create);
    }).keyup();
    window.onload = active();
    function active() {
        if (document.getElementById("nav-enterprise").className == "") {
            document.getElementById("nav-enterprise").className = "active";
        }
    }
</script>