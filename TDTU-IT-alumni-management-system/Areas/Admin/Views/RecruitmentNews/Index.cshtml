@model IEnumerable<TDTU_IT_alumni_management_system.Models.RecruitmentNew>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
        <h2>Quản lý tin tuyển dụng</h2>
        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                Thêm
                <span class="lnr lnr-file-add"></span>
            </a>
        </p>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            Logo
                        </th>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Mô tả
                        </th>
                        <th>
                            Tên doanh nghiệp
                        </th>
                        <th>
                            Ngày đăng
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                <img src="~/Upload/images/Logo/@Html.DisplayFor(modelItem => item.Enterprise.ImgLogo)" style="width : 100px ; height:90px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Describe)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Enterprise.EnterpriseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.datebegin)
                            </td>
                            <td style="background-color: @((bool)item.hide? "lightgreen" : "lightcoral")">
                                @{
                                    if ((bool)item.hide)
                                    {
                                        @Html.Raw("Hiện")
                                    }
                                    else
                                    {
                                        @Html.Raw("Ẩn")
                                    }
                                }
                            </td>
                            <td width="120px">
                                <a href="@Url.Action("Edit", new {id = item.IDRecruitmentNew})" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                                <a href="@Url.Action("Details", new {id = item.IDRecruitmentNew})" class="btn btn-info">
                                    <span class="lnr lnr-layers"></span>
                                </a>
                                <a href="#" class="btn btn-danger delete-btn" data-id="@item.IDRecruitmentNew">
                                    <span class="lnr lnr-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    window.onload = active();
    function active() {
        if (document.getElementById("nav-recruitment").className == "") {
            document.getElementById("nav-recruitment").className = "active";
        }
    }

</script>