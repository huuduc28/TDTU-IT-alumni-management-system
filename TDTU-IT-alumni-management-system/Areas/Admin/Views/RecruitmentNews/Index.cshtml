@model IEnumerable<TDTU_IT_alumni_management_system.Models.RecruitmentNew>

@{
    ViewBag.Title = "Quản lý tin tuyển dụng";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa <span id="delete-news-title"></span> không?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "RecruitmentNews", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id", null, new { id = "newsId" })
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <h2>Quản lý tin tuyển dụng</h2>
        <p>
            <a href="tin-tuyen-dung/tao-moi" class="btn btn-primary">
                Thêm
                <span class="lnr lnr-file-add"></span>
            </a>
        </p>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                            Logo
                        </th>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Mô tả
                        </th>
                        <th>
                            Tên doanh nghiệp
                        </th>
                        <th>
                            Ngày đăng
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @{ var Number = 1;}

                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                @Html.Raw(Number++)
                            </td>
                            <td>
                                <img src="~/Upload/images/Logo/@Html.DisplayFor(modelItem => item.Enterprise.ImgLogo)" style="width : 100px ; height:90px; object-fit:cover" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Describe)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Enterprise.EnterpriseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.datebegin)
                            </td>
                            <td>
                                <span class="lnr lnr-eye" style="color: @((bool)item.hide ? "green" : "red"); font-size: 20px; font-weight: bold;"></span>
                            </td>
                            <td width="120px">
                                <a href="/quan-ly/tin-tuyen-dung/chinh-sua?id=@item.IDRecruitmentNew" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                                <a href="/quan-ly/tin-tuyen-dung/chi-tiet?id=@item.IDRecruitmentNew" class="btn btn-info">
                                    <span class="lnr lnr-eye"></span>
                                </a>
                                <a href="#" class="btn btn-danger delete-btn" data-id="@item.IDRecruitmentNew">
                                    <span class="lnr lnr-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    window.onload = active();
    function active() {
        if (document.getElementById("nav-recruitment").className == "") {
            document.getElementById("nav-recruitment").className = "active";
        }
    }
    $(document).ready(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var newsId = $(this).data('id');
            var newsTitle = $(this).closest('tr').find('td:eq(1)').text();
            $('#newsId').val(newsId);
            $('#delete-news-title').text(newsTitle); // Đặt giá trị cho span có id "delete-news-title"
            $('#confirmDeleteModal').modal('show');
        });
    });
</script>
