@model IEnumerable<TDTU_IT_alumni_management_system.Models.Banner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
        <h2>Quản lý Banner</h2>

        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Thêm 
                <span class="lnr lnr-file-add"></span>
            </a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            Hình ảnh
                        </th>
                        <th>
                            Ngày đăng
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th>Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center;">
                                <img src="~/Upload/images/Banner/@Html.DisplayFor(modelItem => item.ImgBaner)" style="width : 200px ; height:90px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.datebegin)
                            </td>
                            <td style="background-color: @((bool)item.hide ? "lightgreen" : "lightcoral")">
                                @{
                                    if ((bool)item.hide)
                                    {
                                        @Html.Raw("Hiện")
                                    }
                                    else
                                    {
                                        @Html.Raw("Ẩn")
                                    }
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new {id = item.IDBaner})" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                                <a href="@Url.Action("Delete", new {id = item.IDBaner})" class="btn btn-danger">
                                    <span class="lnr lnr-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
<style>
    th {
        text-align: center;
    }
    td {
        text-align: center;
    }
</style>
<script>
        window.onload = active();
    function active() {
        if (document.getElementById("nav-banners").className == "") {
            document.getElementById("nav-banners").className = "active";
        }
    }

</script>
