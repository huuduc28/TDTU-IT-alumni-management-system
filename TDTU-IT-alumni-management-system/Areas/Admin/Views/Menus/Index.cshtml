@model List<TDTU_IT_alumni_management_system.Models.MenuViewModel>
@{
    ViewBag.Title = "Quản lý menu";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa <span id="delete-news-title"></span> không?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "Menus", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id", null, new { id = "newsId" })
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <h2>Quản lý Menu</h2>
        <p>
            <a href="/quan-ly/menu/tao-moi" class="btn btn-primary">
                Thêm  
                <span class="lnr lnr-file-add"></span>
            </a>
        </p>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Tên Memu</th>
                        <th>Menu cha</th>
                        <th> Menu con</th>
                        <th>Đường dẫn</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ParentName))
                                {
                                    @item.ParentName
                                }
                                else
                                {
                                    <text>Không có</text>
                                }
                            </td>
                            <td>
                                @if (item.HasChild)
                                {
                                    <text>Có</text>
                                }
                                else
                                {
                                    <text>Không</text>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Meta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateBegin)
                            </td>
                            <td>
                                <span class="lnr lnr-eye" style="color: @((bool)item.Hide ? "green" : "red"); font-size: 20px; font-weight: bold;"></span>
                            </td>
                            <td style="width:200px">
                                <a href="/quan-ly/menu/chinh-sua?id=@item.ID" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                                <a href="#" class="btn btn-danger delete-btn" data-id="@item.ID">
                                    <span class="lnr lnr-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<script>
        window.onload = active();
    function active() {
        if (document.getElementById("nav-menus").className == "") {
            document.getElementById("nav-menus").className = "active";
        }
        if (document.getElementById("nav-subpage").className == "collapsed") {
            document.getElementById("nav-subpage").className = "collapsed active";
        }
    }
    $(document).ready(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var newsId = $(this).data('id');
            var newsTitle = $(this).closest('tr').find('td:eq(1)').text();
            $('#newsId').val(newsId);
            $('#delete-news-title').text(newsTitle); // Đặt giá trị cho span có id "delete-news-title"
            $('#confirmDeleteModal').modal('show');
        });

        // Tự động chạy hàm active khi trang được tải
    });
</script>