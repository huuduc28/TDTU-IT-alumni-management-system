@model IEnumerable<TDTU_IT_alumni_management_system.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Quản lý Menu</h2>

<p>
    <a href="@Url.Action("Create", "Menus")" class="btn btn-primary">
        <span class="lnr lnr-pencil"></span>
    </a>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TieuDe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasChild)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.meta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hide)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datebegin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TieuDe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasChild)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.meta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hide)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datebegin)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Menus", new {id = item.IDMenu})" class="btn btn-primary">
                        <span class="lnr lnr-pencil"></span>
                    </a>
                    <a href="@Url.Action("Details", "Menus", new {id = item.IDMenu})" class="btn btn-info">
                        <span class="lnr lnr-layers"></span>
                    </a>
                    <a href="@Url.Action("Delete", "Menus", new {id = item.IDMenu})" class="btn btn-danger">
                        <span class="lnr lnr-trash"></span>
                    </a>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.IDMenu }) |*@
                    @*@Html.ActionLink("Details", "Details", new { id = item.IDMenu }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDMenu })*@
                </td>
            </tr>
        }
    </tbody>

</table>
