@model IEnumerable<TDTU_IT_alumni_management_system.Models.Header>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="panel panel-default">
    <div class="panel-body">
        <h2>Quản lý Header</h2>
        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Thêm 
                <span class="lnr lnr-file-add"></span>
            </a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImgLogo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>Chỉnh sửa</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/Upload/images/Logo/@Html.DisplayFor(modelItem => item.ImgLogo)" style="width : 100px ; height:90px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.IDHeader })" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>
<script>
        window.onload = active();
    function active() {
        if (document.getElementById("nav-headers").className == "") {
            document.getElementById("nav-headers").className = "active";
        }
    }

</script>