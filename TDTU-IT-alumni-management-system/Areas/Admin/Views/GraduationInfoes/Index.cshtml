@model IEnumerable<TDTU_IT_alumni_management_system.Models.GraduationInfo>

@{
    ViewBag.Title = "Quản lý khóa học";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<!-- Modal hiển thị thông báo lỗi -->
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="errorModalLabel">Lỗi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Hiển thị thông báo lỗi -->
                <p>@TempData["ErrorMessage"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa <span id="delete-news-title"></span> không?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "GraduationInfoes", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id", null, new { id = "newsId" })
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <h2>Quản lý Khóa học</h2>
        <p>
            <a href="khoa-hoc/tao-moi" class="btn btn-primary">
                Thêm
                <span class="lnr lnr-file-add"></span>
            </a>
        </p>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Ngành học
                        </th>
                        <th>
                            Năm tốt nghiệp
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ var Number = 1;}
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                @Html.Raw(Number++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Majors)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GraduationYear)
                            </td>
                            <td>
                                <a href="/quan-ly/khoa-hoc/chinh-sua?id=@item.ID" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                                <a href="#" class="btn btn-danger delete-btn" data-id="@item.ID">
                                    <span class="lnr lnr-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var newsId = $(this).data('id');
            var newsTitle = $(this).closest('tr').find('td:eq(1)').text();
            $('#newsId').val(newsId);
            $('#delete-news-title').text(newsTitle); // Đặt giá trị cho span có id "delete-news-title"
            $('#confirmDeleteModal').modal('show');
        });
    });
     $(document).ready(function () {
         @if (TempData["ErrorMessage"] != null)
         {
             @:$('#errorModal').modal('show');
         }
     });
    window.onload = active();
    function active() {
        if (document.getElementById("nav-graduations").className == "") {
            document.getElementById("nav-graduations").className = "active";
        }
    }
</script>
