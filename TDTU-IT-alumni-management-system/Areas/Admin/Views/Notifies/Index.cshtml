@model IEnumerable<TDTU_IT_alumni_management_system.Models.Notify>
@*@model List<TDTU_IT_alumni_management_system.Models.NotificationViewModel>*@
@{
    ViewBag.Title = "Quản lý thông báo";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
    var graduationInfoList = ViewBag.GraduationInfoList as List<TDTU_IT_alumni_management_system.Models.GraduationInfo>;
}

<div class="panel panel-default">
    <div class="panel-body">
        <h2>Quản lý thông báo</h2>
        <p>

            <a href="@Url.Action("Create")" class="btn btn-primary">
                Thêm
                <span class="lnr lnr-file-add"></span>
            </a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Mô tả
                        </th>
                        <th>
                            Đối tượng
                        </th>
                        <th>
                            Ngày đăng
                        </th>
                        <th>
                            Hiển thị
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @if (item.TargetType)
                                {
                                    // Nếu TargetType là true, kiểm tra và hiển thị thông tin tốt nghiệp
                                    var selectedGraduationInfo = graduationInfoList.FirstOrDefault(info => info.ID == item.GraduationInfoID);
                                    @Html.DisplayFor(modelItem => selectedGraduationInfo.Majors) @("-") @Html.DisplayFor(modelItem => selectedGraduationInfo.GraduationYear);
                                }
                                else
                                {
                                    <text>Tất cả</text>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.datebegin)
                            </td>
                            <td style="background-color: @((bool)item.hide? "lightgreen" : "lightcoral")">
                                @{
                                    if ((bool)item.hide)
                                    {
                                        @Html.Raw("Hiện")
                                    }
                                    else
                                    {
                                        @Html.Raw("Ẩn")
                                    }
                                }
                            </td>
                            <td width="120px">
                                <a href="@Url.Action("Edit", new {id = item.IDNotify})" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                                <a href="@Url.Action("Details", new {id = item.IDNotify})" class="btn btn-info">
                                    <span class="lnr lnr-layers"></span>
                                </a>
                                <a href="@Url.Action("Delete", new {id = item.IDNotify})" class="btn btn-danger">
                                    <span class="lnr lnr-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<script>
    window.onload = active();
    function active() {
        if (document.getElementById("nav-notifi").className == "") {
            document.getElementById("nav-notifi").className = "active";
        }
    }

</script>