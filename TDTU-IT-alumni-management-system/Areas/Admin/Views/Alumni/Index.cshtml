@using PagedList;
@model IPagedList<TDTU_IT_alumni_management_system.Models.Alumnus>

@{
    ViewBag.Title = "Quản lý cựu sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa <span id="delete-news-title"></span> không?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "Alumni", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id", null, new { id = "newsId" })
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8">
                <h2>Quản lý cựu sinh viên</h2>
                <h4>Alumni</h4>
                <p>
                    <a href="cuu-sinh-vien/tao-moi" class="btn btn-primary">
                        Thêm
                        <span class="lnr lnr-file-add"></span>
                    </a>
                </p>
            </div>
            <div class="col-md-4">
                <div class="search-container" style="margin-top:5%; margin-bottom:5%;">
                    <form id="searchForm" action="@Url.Action("Search")" method="get">
                        <div class="input-group mb-4">
                            <div class="row">
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="searchString" placeholder="Nhập thông tin...">

                                </div>
                                <div class="col-md-4">
                                    <div class="input-group-append">
                                        <button class="btn btn-info" type="submit">Tìm kiếm</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="filter-container" ">
                    @Html.DropDownList("majorKey", new SelectList(new[]
                    {
                        new SelectListItem { Value = "Khoa học máy tính", Text = "Khoa học máy tính" },
                        new SelectListItem { Value = "Kỹ thuật phần mềm", Text = "Kỹ thuật phần mềm" },
                        new SelectListItem { Value = "Mạng Máy Tính Và Truyền Thông Dữ Liệu", Text = "Mạng Máy Tính Và Truyền Thông Dữ Liệu" }
                    }, "Value", "Text"), "Chọn ngành...", new { @class = "form-control" })
                    <div class="row" style="margin-top:2%">
                        <div class="col-md-6">
                            <select id="graduationYear" class="form-control">
                                <option value="">Chọn năm tốt nghiệp</option>
                                @for (int year = DateTime.Now.Year; year >= 2001; year--)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            @Html.DropDownList("TypeOfTraining", new SelectList(new[]
                            {
                                new SelectListItem { Value = "Tiêu chuẩn", Text = "Tiêu chuẩn" },
                                new SelectListItem { Value = "CLC 50% Tiếng anh", Text = "CLC 50% Tiếng anh" },
                                new SelectListItem { Value = "CLC 100% Tiếng anh", Text = "CLC 100% Tiếng anh" }
                            }, "Value", "Text"), "Chọn Hệ...", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Ảnh đại diện
                        </th>
                        <th>
                            Mã cựu sinh viên
                        </th>
                        <th>
                            Họ và tên
                        </th>
                        <th>
                            Thông tin liên hệ
                        </th>
                        <th>
                            Ngành tốt nghiệp
                        </th>
                        <th>
                            Hệ đào tạo
                        </th>
                        <th>
                            Công việc hiện tại
                        </th>
                        <th>
                            Trình độ
                        </th>
                        <th>
                            Kĩ năng
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="alumniPartialContainer">
                    @{ var Number = 1;}
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                @Html.Raw(Number++)
                            </td>
                            <td>
                                <img src="~/Upload/images/Avata/@item.ProfilePicture" alt="Avatar" style="border-radius: 50%; width: 100px; height: 100px; object-fit: cover; ">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDAlumni)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email) @("-") @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GraduationInfo.Majors) @("-") @Html.DisplayFor(modelItem => item.GraduationInfo.GraduationYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeOfTraining)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Profession) @("-") @Html.DisplayFor(modelItem => item.CurrentCompany)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AcademicLevel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.skill)
                            </td>
                            <td style="width:100px">
                                <a href="cuu-sinh-vien/chinh-sua?id=@item.IDAlumni" class="btn btn-primary">
                                    <span class="lnr lnr-pencil"></span>
                                </a>
                                <a href="cuu-sinh-vien/chi-tiet?id=@item.IDAlumni" class="btn btn-info">
                                    <span class="lnr lnr-eye"></span>
                                </a>
                                <a href="#" class="btn btn-danger delete-btn" data-id="@item.IDAlumni">
                                    <span class="lnr lnr-trash"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @*Phân trang*@
        @if (Model.PageCount > 1)
        {
            <div class="pagination-container">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <span class="page-link">Page @Model.PageNumber.ToString() of @Model.PageCount.ToString()</span>
                    </li>
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/quan-ly/cuu-sinh-vien?page=1" aria-label="First">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">First</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/quan-ly/cuu-sinh-vien?page=@(Model.PageNumber - 1)" aria-label="Previous">
                                <span aria-hidden="true">&lsaquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    }

                    @for (var i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                            <a class="page-link" href="/quan-ly/cuu-sinh-vien?page=@i">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.PageCount)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/quan-ly/cuu-sinh-vien?page=@( Model.PageNumber + 1 )" aria-label="Next">
                                <span aria-hidden="true">&rsaquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/quan-ly/cuu-sinh-vien?page=@Model.PageCount" aria-label="Last">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Last</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>

<script>

    $(document).ready(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var newsId = $(this).data('id');
            var newsTitle = $(this).closest('tr').find('td:eq(1)').text();
            $('#newsId').val(newsId);
            $('#delete-news-title').text(newsTitle); // Đặt giá trị cho span có id "delete-news-title"
            $('#confirmDeleteModal').modal('show');
        });

        // Tự động chạy hàm active khi trang được tải
    });
    window.onload = active();
    function active() {
        if (document.getElementById("nav-alumnis").className == "") {
            document.getElementById("nav-alumnis").className = "active";
        }
    };
    $(function () {
        $('#searchForm').submit(function (event) {
            event.preventDefault(); // Ngăn chặn việc gửi form một cách truyền thống

            // Gửi yêu cầu tìm kiếm bằng phương thức GET
            $.get($(this).attr('action'), $(this).serialize(), function (response) {
                // Tìm phần tử tbody của bảng
                var tbody = $('#dataTables-example tbody');

                // Xóa hết các dòng hiện có trong tbody
                tbody.empty();

                // Thêm từng dòng mới vào tbody
                tbody.append($(response).find('.gradeX'));
                // Đếm số lượng dòng dữ liệu
                var rowCount = tbody.find('tr').length;
                if (rowCount > 10) {
                    $('.pagination-container').show();
                } else {
                    $('.pagination-container').hide();
                }
            });
        });
    });
    //lọc dữ liệu
     $(document).ready(function () {
        $('#majorKey, #graduationYear, #TypeOfTraining').change(function () {
            var majorKey = $('#majorKey').val();
            var graduationYear = $('#graduationYear').val();
            var typeOfTraining = $('#TypeOfTraining').val();

            $.ajax({
                url: '@Url.Action("DataFilter", "Alumni")',
                type: 'GET',
                data: {
                    majorKey: majorKey,
                    graduationYear: graduationYear,
                    typeOfTraining: typeOfTraining
                },
                success: function (response) {
                    var tbody = $('#dataTables-example tbody');
                    tbody.empty();
                    $('#alumniPartialContainer').html(response);
                    $('.pagination-container').hide();
                },
                error: function () {
                    alert('Đã xảy ra lỗi khi lọc dữ liệu!');
                }
            });
        });
    });
    $(document).ready(function () {
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var newsId = $(this).data('id');
            var newsTitle = $(this).closest('tr').find('td:eq(1)').text();
            $('#newsId').val(newsId);
            $('#delete-news-title').text(newsTitle); // Đặt giá trị cho span có id "delete-news-title"
            $('#confirmDeleteModal').modal('show');
        });
    });
    $(document).ready(function () {
        // Kiểm tra nếu có thông báo thành công, hiển thị modal
        @if (TempData["SuccessMessage"] != null)
        {
            @:$('#successModal').modal('show');
        }
        setTimeout(function () {
            $("#successModal").modal('hide');
        }, 1000);
    });
</script>