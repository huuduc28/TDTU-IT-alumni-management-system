@model TDTU_IT_alumni_management_system.Models.RecruitmentNew

@{
    ViewBag.Title = "Chi tiết tin tuyển dụng";
    Layout = "~/Views/Shared/Mylayout.cshtml";
}
<div class="container" style="margin-left: 10%; margin-top: -3%;">
    <div class="row">
        <div class="col-lg-11 news-detail">
            <h2 class="mb-4">@Model.Title</h2>
            <p class="text-muted"> @Model.datebegin.Value.ToString("MM/dd/yyyy h:mm tt")</p>
            <hr>
            <a href="~/Upload/file/@Model.JobDescription" target="_blank" style="font-weight: bold; text-decoration: none;">Mô tả công việc</a>
            <p>@Html.Raw(@Model.Content)</p>
        </div>
    </div>
</div>


<link href="~/Content/css/news.css" rel="stylesheet">
<script>
    window.onload = active();
    function active() {

        if (document.getElementById("home-doanh-nghiep").className == "nav-item nav-link") {
            document.getElementById("home-doanh-nghiep").className = "nav-item nav-link active";
        }
    }
</script>