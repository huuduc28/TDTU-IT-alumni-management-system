@model TDTU_IT_alumni_management_system.Models.News

@{
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Views/Shared/Mylayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-9 news-detail">
            <h1 class="mb-4">@Model.Title</h1>
            <p class="text-muted"> @Model.datebegin.Value.ToString("MM/dd/yyyy h:mm tt")</p><hr>
            @*<img src="~/Upload/images/News/@Model.ImgNews" alt="News Image" class="mb-4 img-fluid">*@
            <div id="content" style="margin-top:10px"></div>
        </div>
        <div class="col-lg-3 news-list mt-5">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h5 class="section-title bg-white text-center text-primary px-3">Tin Mới</h5>
            </div>
            <ul class="list-group">
                @{Html.RenderAction("GetNewsList", "New");}
            </ul>
        </div>
    </div>
</div>
<link href="~/Content/css/news.css" rel="stylesheet">
<script>
    let htmlString = `@Html.Raw(Model.Content)`;
    let escapedHtmlString = encodeURIComponent(htmlString);
        document.getElementById('content').innerHTML = decodeURIComponent(escapedHtmlString);
    window.onload = active();
    function active() {

        if (document.getElementById("home-").className == "nav-item nav-link") {
            document.getElementById("home-").className = "nav-item nav-link active";
        }
    }
</script>