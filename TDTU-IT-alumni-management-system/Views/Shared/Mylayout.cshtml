</html>
<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="~/Content/lib/owlcarousel/owl.carousel.min.js"></script>
<script src="~/Content/lib/wow/wow.min.js"></script>
<script src="~/Scripts/js/main.js"></script>
<script>
    (function ($) {
        $(".header-carousel").owlCarousel({
            autoplay: true,
            smartSpeed: 1500,
            items: 1,
            dots: false,
            loop: true,
            nav: true,
            navText: [
                '<i class="bi bi-chevron-left"></i>',
                '<i class="bi bi-chevron-right"></i>'
            ]
        })      
    })(jQuery);
</script>
<style>
    .bell-icon {
        color: white; /* Đặt màu trắng cho biểu tượng */
        position: relative; /* Đặt biểu tượng chuông làm đối tượng mẹ */
        font-size: 1.5rem;
    }
    .badge-sm {
        font-size: 0.7rem;
        padding: 0.2rem 0.4rem;
        border-radius: 50%;
        position: absolute;
        top: 0;
        right: -8px; /* Điều chỉnh vị trí của số thông báo */
        background-color: red; /* Màu sắc của số thông báo */
        color: white; /* Màu chữ của số thông báo */
    }
</style>