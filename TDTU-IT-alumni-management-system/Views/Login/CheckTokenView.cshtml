
@{
    ViewBag.Title = "CheckTokenView";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên mật khẩu</title>
    <link rel="icon" type="image/x-icon" href="~/Upload/images/logo-tdtu.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/login.css">
    <style>
        .tempFixed{
            margin-left:auto;
            margin-right:auto;
            width:60%;
        }
    </style>
</head>
<body>
    <div class="container mt-5 p-5 d-flex justify-content-center">
        <div class="row login-body mt-5 ms-5 me-5 tempFixed">

            <div class="col">
                <div class="login-form mb-5 mt-5">

                    <form id="tokenForm">
                        <div class="d-flex justify-content-center">
                            <p class="h2 htext">Nhập mã đã được gửi về email của bạn @(Session["tempMail"]) @(Session["token"])</p>
                        </div>
                        <div class="mb-5 mt-5">
                            <label for="toKen" class="form-label">Token</label>
                            <input type="text" class="form-control" id="toKen" placeholder="Nhập token">
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-danger" onclick="location.href='/Login/Index'">Quay lại</button>
                            <button type="submit" class="btn btn-danger btn-login">Xác nhận</button>
                        </div>

                    </form>

                    <form id="resetForm" style="display:none;">
                        <div class="d-flex justify-content-center">
                            <p class="h2 htext">Nhập mật khẩu mới</p>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="newPassword" class="form-label">Nhập mật khẩu mới</label>
                            <input type="password" class="form-control" id="newPassword" placeholder="Nhập mật khẩu mới" required>
                        </div>

                        <div class="mb-3 mt-3">
                            <label for="reNewPassword" class="form-label">Nhập lại mật khẩu mới</label>
                            <input type="password" class="form-control" id="reNewPassword" placeholder="Nhập lại mật khẩu mới" required>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-danger" onclick="location.href='/Login/Index'">Hủy</button>
                            <button type="submit" class="btn btn-danger btn-login" id="savenew" disabled>Lưu</button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>


    <script>
        $(document).ready(function () {
            $("#tokenForm").submit(function (event) {
                event.preventDefault();

                var toKen = $("#toKen").val();
                $.ajax({
                    url: '/Login/CheckingTokenData',
                    type: 'POST',
                    data: {
                        Token: toKen,
                        check: 1
                    },

                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            $("#tokenForm").hide();
                            $("#resetForm").show();
                        } else {
                            alert(response.message);

                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.error("Có lỗi xảy ra, vui lòng thử lại!", textStatus, errorThrown);
                        alert("Có lỗi xảy ra, vui lòng thử lại!");
                    }
                });
                
            });
        });

        
    </script>

    <script>
        const form = document.getElementById("resetForm");
        const newPasswordInput = document.getElementById("newPassword");
        const reNewPasswordInput = document.getElementById("reNewPassword");
        const submitButton = document.getElementById("savenew");

        form.addEventListener("input", () => {
            const isPasswordsValid = newPasswordInput.value === reNewPasswordInput.value && newPasswordInput.value !== "";
            submitButton.disabled = !isPasswordsValid;
        });

        $(document).ready(function () {
            $("#resetForm").submit(function (event) {
                event.preventDefault();

                var newPassword = $("#newPassword").val();
                $.ajax({
                    url: '/Login/CheckAndChangeDataInSession',
                    type: 'POST',
                    data: {
                        CurrentPassword: newPassword,
                        NewPassword: newPassword
                    },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            window.location.href = '/Login/Index';
                        } else {
                            alert(response.message);

                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.error("Có lỗi xảy ra, vui lòng thử lại!", textStatus, errorThrown);
                        alert("Có lỗi xảy ra, vui lòng thử lại!");
                    }
                });
                
            });
        });
    </script>
</body>
