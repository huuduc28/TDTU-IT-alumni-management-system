@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Đăng Nhập</title>
    <link rel="icon" type="image/x-icon" href="~/Upload/images/logo-tdtu.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/login.css">
    <style>
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="language-switcher">
            <div class="dropdown" id="languageDropdown">
                <button class="btn dropdown-toggle btn-danger" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Thay đổi ngôn ngữ
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="#">Tiếng Việt</a></li>
                    <li><a class="dropdown-item" href="#">English</a></li>
                </ul>
            </div>
        </div>
        <div class="row login-body">
            <div class="col-md-4 col-sm-4 col-lg-4 logo-tittle d-none d-sm-block" style="padding: 40px;">
                <img class="mx-auto d-block" src="~/Upload/images/logo-tdtu-inkythuatso-01.png" alt="logo" width="150" height="75">
                <p class="h1 p-4 ms-4 text-white">Cổng thông tin <br>Cựu học sinh, <br>sinh viên</p>
            </div>

            <div class="col">
                <div class="login-form mb-5 mt-5">
                    <div class="d-flex justify-content-center">
                        <p class="h2 htext">Xin Chào!</p>
                    </div>
                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="userID" class="form-label">Tài khoản</label>
                            <input type="text" class="form-control" id="userID" placeholder="Nhập tài khoản">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu">
                        </div>
                        
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-block btn-danger btn-login">Đăng nhập</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="#" onclick="showForgotPasswordForm()" id="forgotPasswordLink">Quên mật khẩu?</a>
                        </div>

                    </form>
                    <form class="forgot-password-form">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Nhập email">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">User ID</label>
                            <input type="email" class="form-control" id="userID" placeholder="Nhập User ID">
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <button type="button" class="btn btn-danger" onclick="hideForgotPasswordForm()">Hủy</button>
                            <button type="submit" class="btn btn-danger btn-forgot" onclick="hideForgotPasswordForm()">Gửi yêu cầu</button>
                        </div>


                        <div style="visibility: hidden;">
                            <div class="mb-3">
                                <label for="nothing" class="form-label">nothing</label>
                                <input type="nothing" class="form-control" id="userID" placeholder="userID">
                            </div>
                            <div class="text-center mt-3">
                                <a href="#" onclick="showForgotPasswordForm()" id="forgotPasswordLink">Quên mật khẩu?</a>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#loginForm").submit(function (event) {
                event.preventDefault(); 

                var username = $("#userID").val();
                var password = $("#password").val();

                
                $.ajax({
                    url: '/Login/Login', 
                    type: 'POST',
                    data: {
                        Username: username,
                        Password: password
                    },
                    success: function (response) {
                        if (response.success) {
                            
                            window.location.href = '/Home/Index';
                        } else {
                            
                            alert(response.message);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.error("Lỗi khi gửi dữ liệu đăng nhập:", textStatus, errorThrown);
                        alert("Có lỗi xảy ra, vui lòng thử lại!");
                    }
                });
            });
        });
    </script>

    <script>
        // Hàm để hiển thị form quên mật khẩu và ẩn form đăng nhập
        function showForgotPasswordForm() {
            var loginForm = document.getElementById('loginForm');
            var forgotPasswordForm = document.querySelector('.forgot-password-form');

            loginForm.style.display = 'none';
            forgotPasswordForm.style.display = 'block';
        }

        // Hàm để ẩn form quên mật khẩu và hiển thị form đăng nhập
        function hideForgotPasswordForm() {
            var loginForm = document.getElementById('loginForm');
            var forgotPasswordForm = document.querySelector('.forgot-password-form');

            loginForm.style.display = 'block';
            forgotPasswordForm.style.display = 'none';
        }
    </script>



</body>
</html>
